  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraRestMvcFormsLecture</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body class="grey lighten-3">
    <!-- navigation -->
      <nav class="indigo darken-4">
        <div class="container">
          <a href="/" class="brand-logo">Home</a>
          <ul class="right">
            <% unless logged_in? %>
              <li><a href="/signup">Create Account</a></li>
              <li><a href="/login"><i class="material-icons left" style="margin-top: 4px; margin-right: 2px">account_box</i>Login</a></li>
            <% else %>
              <li><%= current_user.username %></li>
              <li><a href="/logout">Logout</a></li>
            <% end %>
          </ul>
        </div>
      </nav>
    <!-- end navigation -->

    <!-- error messages -->
        <% if flash[:error] %>
          <% flash[:error].each do |error| %>
            <div>
              <%= error %>
            </div>
          <% end %>
        <% end %>
        <% if flash[:notice] %>
          <div>
            <%= flash[:notice] %>
          </div>
        <% end %>
    <!--  end error messages -->

    <!-- main content hoverable -->
    <div class="container grey lighten-4 z-depth-5" style="margin-top: 25px; margin-bottom: 25px; padding: 25px;">
      <%= yield %>
    </div>
    <!-- end main content -->

    <!-- footer -->

    <footer class="page-footer indigo darken-4">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">Footer Content</h5>
            <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
          </div>
          <div class="col l4 offset-l2 s12">
            <h5 class="white-text">Links</h5>
            <ul>
              <li><a class="grey-text text-lighten-3" href="https://twitter.com" target="_blank">Twitter</a></li>
              <li><a class="grey-text text-lighten-3" href="#!">LinkedIn</a></li>
              <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
              <li><a class="grey-text text-lighten-3" href="#!">Link 4</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
        Â© 2014 Copyright Text
        <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
        </div>
      </div>
    </footer>
    <!-- end footer -->

    <!-- javascripts -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

